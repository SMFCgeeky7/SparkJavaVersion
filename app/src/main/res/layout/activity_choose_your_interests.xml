<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Back Button -->

    <!-- Título con fuente ManRope -->

    <!-- Contenedor de categorías -->

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:padding="16dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/manrope_extrabold"
        android:text="Elige tus intereses"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_button" />

    <!-- Botón Continuar -->

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group"
        android:layout_width="381dp"
        android:layout_height="42dp"
        android:layout_margin="24dp"
        android:layout_marginTop="8dp"
        app:chipSpacing="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">

        <!-- Categorías (repetir según necesidades) -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_mascotas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="Mascotas"
            android:textColor="@color/selector_chip_text"
            android:textSize="14sp"
            app:chipBackgroundColor="@color/selector_chip_background"
            app:chipStrokeColor="@color/selector_chip_stroke"
            app:rippleColor="@color/transparent" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_maquillaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="Maquillaje"
            android:textColor="@color/selector_chip_text"
            android:textSize="14sp"
            app:chipBackgroundColor="@color/selector_chip_background"
            app:chipStrokeColor="@color/selector_chip_stroke"
            app:rippleColor="@color/transparent" />

        <!-- Agregar más categorías aquí... -->

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_continuar"
        android:layout_width="231dp"
        android:layout_height="47dp"
        android:text="Continuar"
        android:textSize="16sp"
        android:fontFamily="@font/manrope_extrabold"
        android:textColor="@color/white"
        android:backgroundTint="@color/teal_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="48dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>